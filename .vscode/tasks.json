{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build_single_file",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "group": {
                "kind": "build"
            },
            "problemMatcher": ["$gcc"]
        },
        {
            "label": "build_LInt",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "${workspaceFolder}/LongInt.cpp",
                "${workspaceFolder}/LInt.cpp",
                "-o",
                "${workspaceFolder}/LongInt.exe"
            ],
            "group": {
                "kind": "build"
            },
            "problemMatcher": ["$gcc"]
        },
        {
            "label": "build_all",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "${workspaceFolder}/*.cpp",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "group": {
                "kind": "build"
            },
            "problemMatcher": ["$gcc"]
        },
        {
            "label": "build_longint",
            "type": "shell",
            "command": "mingw32-make",
            "group": { "kind": "build" },
            "problemMatcher": ["$gcc"]
        },
        {
            "label": "merge_single_file",
            "type": "shell",
            "command": "python",
            "args": ["merge.py", "${file}"],
            "group": {
                "kind": "build"
            },
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": []
        }
    ]
}
